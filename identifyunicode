//http://stackoverflow.com/questions/14352481/reading-unicode-characters-from-csv-file
import java.io.File;
import java.io.IOException;
import java.util.Scanner;



public class Indentify{

	public static void main (String[] args) throws Exception {
		
		
		Scanner scan = null;
		try {
			scan = new Scanner(new File("entityfacts.csv"));
			
		} catch (IOException e){
			System.out.println("Could not load file");
		}
		//Scanner scan = new Scanner(new File("entityfacts.csv"));
		while (scan.hasNext()){
			System.out.println(scan.nextLine());
		}	
		
		Scanner user_input = new Scanner (System.in);
		String character;
		character = user_input.next();
		System.out.println(character);
		int characterhex = character.charAt(0);
		Integer.toHexString(characterhex);
		System.out.println(characterhex);
	}
	

}



